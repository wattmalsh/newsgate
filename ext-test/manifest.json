{
  "name": "Page Redder",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["storageController/updateStorage.js", "storageController/getLastUpdated.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      // "css": ["mystyles.css"],
      "js": [
        "lib/jquery.min.js",
        "models/checkForFakes.js",
        "renderBlacklistedDOM.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Make this page red"
  },
  "manifest_version": 2
}

