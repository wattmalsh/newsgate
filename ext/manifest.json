{
  "name": "Newsgate",
  "description": "Point out fake news",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "https://newsgate.herokuapp.com/*",
    "contextMenus"
  ],
  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "lib/jquery.min.js",
      "storageController/storageController.js",
      "models/checkForFakes.js",
      "alertFakeSite/checkAddressBarUrl.js",
      "models/contextMenu.js"
    ]
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["styles/clearall.css", "styles/styles.css"],
      "js": [
        "lib/jquery.min.js",
        "alertFakeSite/alertFakeSite.js",
        "views/renderBlacklistedDOM.js"
      ]
    }
  ],
  "manifest_version": 2
}
