{
  "name": "Newsgate",
  "description": "Point out fake news",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": [
      "lib/jquery.min.js",
      "models/checkForFakes.js"
    ]
    // "persistent": false
    // "page": "background.html"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["clearall.css", "styles.css"],
      "js": [
        "lib/jquery.min.js",
        "models/checkForFakes.js",
        "models/alertFakeSite.js",
        "views/renderBlacklistedDOM.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Make this page red"
  },
  "manifest_version": 2
}
